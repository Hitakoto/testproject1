<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000080">

    <TextView
        android:id="@+id/ie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Главная"
        android:textAlignment="center"
        android:textColor="#CC3628"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnchernobyl"
        android:layout_width="134dp"
        android:layout_height="40dp"
        android:background="@drawable/styles"
        android:text="Смотреть"
        app:backgroundTint="#CC3628"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.864"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ie"
        app:layout_constraintVertical_bias="0.534" />

    <ImageView
        android:id="@+id/imv"
        android:layout_width="139dp"
        android:layout_height="206dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="256dp"
        android:layout_marginBottom="363dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ie"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/hbo"
        android:contentDescription="TODO" />

    <TextView
        android:id="@+id/sdfe"
        android:layout_width="195dp"
        android:layout_height="35dp"
        android:layout_marginTop="77dp"
        android:layout_marginBottom="202dp"
        android:text="@string/chernobyl"
        android:textAlignment="center"
        android:textColor="#CC3628"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/btnchernobyl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imv"
        app:layout_constraintTop_toBottomOf="@+id/ie" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="224dp"
        android:layout_height="188dp"
        android:layout_marginTop="7dp"
        android:text="Chernobyl is a 2019 historical drama \n television miniseries that revolves around the \n Chernobyl disaster of 1986 and \n the cleanup efforts that followed."
        android:textAlignment="textStart"
        android:textColor="#CC3628"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toEndOf="@+id/imv"
        app:layout_constraintTop_toBottomOf="@+id/sdfe" />

</androidx.constraintlayout.widget.ConstraintLayout>